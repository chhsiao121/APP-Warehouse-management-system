<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chhsiao.firebase.quickstart.database.java.InventoryModeFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="24dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMode1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFFFFF"
                app:strokeWidth="2dp"
                app:strokeColor="@color/border_gray"
                android:layout_margin="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteX="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/mode1ID"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AABB"
                            android:textSize="16sp"
                            android:textColor="@color/font_black"
                            android:textStyle="bold"
                            android:textAppearance="?attr/textAppearanceHeadline5" />
                        <TextView
                            android:id="@+id/mode1Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="堪用狀態盤點"
                            android:textSize="28sp"
                            android:textColor="@color/font_black"
                            android:textStyle="bold"
                            android:textAppearance="?attr/textAppearanceHeadline5" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:textSize="12sp"
                            android:textColor="@color/font_black"
                            android:text="建置日期：2022/12/11 13:48"
                            android:textAppearance="?attr/textAppearanceBody2"/>

                        <TextView
                            android:id="@+id/remarkMode1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="備註：盤點數量＋拍照"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textSize="12sp"
                            android:textColor="@color/font_black" />

                    </LinearLayout>
                    <!-- Buttons -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnMode1"
                            style="?attr/borderlessButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="選取" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMode2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFFFFF"
                app:strokeWidth="2dp"
                app:strokeColor="@color/border_gray"
                android:layout_margin="16dp"
                app:layout_constraintTop_toBottomOf="@+id/cardMode1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteX="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/mode2ID"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A1B1"
                            android:textSize="16sp"
                            android:textColor="@color/font_black"
                            android:textStyle="bold"
                            android:textAppearance="?attr/textAppearanceHeadline5" />
                        <TextView
                            android:id="@+id/mode2Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/font_black"
                            android:textStyle="bold"
                            android:textSize="28sp"
                            android:text="數量盤點"
                            android:textAppearance="?attr/textAppearanceHeadline5" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:textSize="12sp"
                            android:textColor="@color/font_black"
                            android:text="建置日期：2022/12/11 15:56"
                            android:textAppearance="?attr/textAppearanceBody2" />

                        <TextView
                            android:id="@+id/remarkMode2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textSize="12sp"
                            android:textColor="@color/font_black"
                            android:text="備註：盤點數量"
                            android:textAppearance="?attr/textAppearanceBody2" />

                    </LinearLayout>
                    <!-- Buttons -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnMode2"
                            style="?attr/borderlessButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="選取" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>