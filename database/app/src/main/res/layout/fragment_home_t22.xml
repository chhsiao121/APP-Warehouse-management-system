<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chhsiao.firebase.quickstart.database.java.InventoryFragment">

    <include
        android:id="@+id/T22AuthorLayout"
        layout="@layout/include_t22_author"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNewInventory"
        android:layout_width="330dp"
        android:layout_height="46dp"
        android:text="建立新盤點模式"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:background="@drawable/custom_button"
        android:stateListAnimator="@null"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/T22AuthorLayout" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnStartInventory"
        android:layout_width="330dp"
        android:layout_height="46dp"
        android:text="開始盤點"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:background="@drawable/custom_button"
        android:stateListAnimator="@null"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNewInventory" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNotYetInventory"
        android:layout_width="330dp"
        android:layout_height="46dp"
        android:text="未完成盤點"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:background="@drawable/custom_button"
        android:stateListAnimator="@null"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnStartInventory" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnResultInventory"
        android:layout_width="330dp"
        android:layout_height="46dp"
        android:text="盤點結果"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:background="@drawable/custom_button"
        android:stateListAnimator="@null"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNotYetInventory" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCompareInventory"
        android:layout_width="330dp"
        android:layout_height="46dp"
        android:text="歷次盤點比較"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:background="@drawable/custom_button"
        android:stateListAnimator="@null"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnResultInventory" />

</androidx.constraintlayout.widget.ConstraintLayout>