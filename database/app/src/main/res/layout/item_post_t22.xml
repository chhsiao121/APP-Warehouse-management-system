<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:viewBindingIgnore="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/barcode"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="112121"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/line"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/itemName"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="折疊椅"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/line"
            app:layout_constraintStart_toEndOf="@id/barcode"/>

        <TextView
            android:id="@+id/number"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="3"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/line"
            app:layout_constraintStart_toEndOf="@id/itemName"/>

        <TextView
            android:id="@+id/uploadTime"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="2022/3/10 09:30"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/line"
            app:layout_constraintStart_toEndOf="@id/number"/>

        <TextView
            android:id="@+id/remarks"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text=""
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/line"
            app:layout_constraintStart_toEndOf="@id/uploadTime"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/imageItem1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/images"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/barcode"/>
        <ImageView
            android:id="@+id/imageItem2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/images"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toEndOf="@+id/imageItem1"
            app:layout_constraintTop_toBottomOf="@+id/barcode"/>
        <ImageView
            android:id="@+id/imageItem3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/images"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toEndOf="@+id/imageItem2"
            app:layout_constraintTop_toBottomOf="@+id/barcode"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
